<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MusicApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="Theme.MusicApp" parent="Base.Theme.MusicApp" />

    <style name="CustomNavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@color/black</item>
    </style>

    <style name="base_font">
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="font_roboto" parent="base_font">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="font_roboto_medium" parent="base_font">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="text_roboto_10" parent="font_roboto">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="text_roboto_medium_14" parent="font_roboto_medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_roboto_medium_20" parent="font_roboto_medium">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_roboto_20" parent="font_roboto">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="font_roboto_bold" parent="base_font">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_roboto_bold_40" parent="font_roboto_bold">
        <item name="android:textSize">40sp</item>
    </style>
</resources>